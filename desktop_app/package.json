{
  "name": "fpv-drone-configurator",
  "version": "2.0.0",
  "description": "FPV Drone Flight Controller Configurator - Phase 1 & 2 Enhanced Edition",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev-react\" \"wait-on http://localhost:3000 && electron .\"",
    "dev-react": "vite",
    "build": "vite build",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-all": "npm run build && electron-builder --win --mac --linux --publish=never",
    "dist-win": "npm run build && electron-builder --win --publish=never",
    "dist-mac": "npm run build && electron-builder --mac --publish=never", 
    "dist-linux": "npm run build && electron-builder --linux --publish=never",
    "pack": "npm run build && electron-builder --dir",
    "preview": "vite preview"
  },
  "keywords": [
    "drone",
    "flight-controller",
    "fpv",
    "teensy",
    "pid-tuning",
    "dual-imu",
    "dynamic-filtering"
  ],
  "author": "FPV Drone Project",
  "license": "MIT",
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "chart.js": "^4.5.0",
    "date-fns": "^2.29.3",
    "electron-store": "^8.1.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "serialport": "^10.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4",
    "vite": "^4.1.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.fpvdrone.configurator",
    "productName": "FPV Drone Configurator",
    "copyright": "Copyright Â© 2024 FPV Drone Project",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "node_modules/**/*",
      "!node_modules/**/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/test/**",
      "!node_modules/**/*.d.ts"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "assets/",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "publisherName": "FPV Drone Project",
      "fileAssociations": [
        {
          "ext": "fpv",
          "name": "FPV Drone Configuration",
          "description": "FPV Drone Configuration File"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Utility",
      "synopsis": "FPV Drone Flight Controller Configurator",
      "description": "Professional FPV drone flight controller configuration tool with enhanced safety features."
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FPV Drone Configurator"
    },
    "dmg": {
      "title": "FPV Drone Configurator",
      "icon": "public/icon.icns",
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 230,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 230,
          "type": "file"
        }
      ]
    }
  }
}
